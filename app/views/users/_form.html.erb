<%= render 'shared/errors', obj: @user%>
<div class= "container mt-4 justify-content-center">
    <div class= "row justify-content-center">
        <div class= "col-6">
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class= "col-10">
                    <div class="mb-3">
                        <%= f.label :name, class: "form-label" %>
                        <%= f.text_field :name, class: "form-control"%>
                        
                    </div>
                    <div class="mb-3">
                        <%= f.label :password, class: "form-label" %>
                        <%= f.password_field :password, class: "form-control"%>
                        <div id="emailHelp" class="form-text text-danger">*required field*</div>
                    </div>
                    <div class="mb-3">
                        <%= f.label :email, class: "form-label" %>
                        <%= f.email_field :email, class: "form-control"%>
                        <div id="emailHelp" class="form-text text-danger">*required field*</div>
                    </div>

                    

                    
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg" )%>
                </div>
            <%end%>
        </div>
    </div>
</div>