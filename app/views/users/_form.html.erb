<%= render 'shared/errors', obj: @user%>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :email%>
  <%= f.email_field :email%>
  <%= f.label :password%>
  <%= f.password_field :password%>
  <%= f.submit(@user.new_record? ? "Sign up" : "Update account")%>
<%end%>
